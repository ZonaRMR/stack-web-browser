<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/folder"
        android:id="@+id/foldertext"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:id="@+id/folderSpinner"
        android:layout_below="@id/foldertext"
        android:layout_alignLeft="@id/foldertext"
        android:layout_alignStart="@id/foldertext"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_fol"
        android:layout_toRightOf="@id/folderSpinner"
        android:layout_toEndOf="@id/folderSpinner"
        android:id="@+id/newfolButton"
        android:layout_alignTop="@id/folderSpinner"/>

</RelativeLayout>