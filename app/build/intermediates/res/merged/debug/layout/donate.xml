<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical|top"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="eu.depa.browsing.stack.Donate">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/donate"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/bitcoin"
            android:foreground="@drawable/bitcoin"
            tools:ignore="ContentDescription"
            android:background="@drawable/bitcoin" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="@dimen/buttonSize"
            android:layout_height="@dimen/buttonSize"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/paypal"
            android:foreground="@drawable/paypal"
            tools:ignore="ContentDescription"
            android:background="@drawable/paypal" />
    </LinearLayout>
</RelativeLayout>